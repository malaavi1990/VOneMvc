@using VOneDomain.Models
@model VOneViewModels.ProductViewModels

@using (Ajax.BeginForm("EditProduct", "Product",
    FormMethod.Post,
    new AjaxOptions()
    {
        OnSuccess = "loadListProduct",
        UpdateTargetId = "div-product-container"
    }, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">ویرایش محصول</h4>
                    <p class="card-description mb-5">
                        اطلاعات را وارد کرده و دکمه تایید را یزنید
                    </p>
                    <hr />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label for="title">عنوان محصول</label>
                        <input type="text" class="form-control" value="@Model.Title" id="title" name="Title" placeholder="عنوان محصول">
                    </div>
                    <div class="form-group">
                        <label for="price">قیمت محصول</label>
                        <input type="number" min="0" class="form-control" value="@Model.Price" name="Price" id="price" placeholder="قیمت محصول">
                    </div>
                    <div class="form-group">
                        <label for="description">توضیح مختصر</label>
                        <textarea class="form-control" name="Description" id="description" rows="4">@Model.Description</textarea>
                    </div>
                    <div class="form-group">
                        <label for="text">توضیح کامل</label>
                        <textarea class="form-control" name="Text" id="text" rows="10">@Model.Text</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">تایید</button>
                    <button type="button" onclick="showListProduct()" class="btn btn-light">بازگشت</button>
                </div>
            </div>
        </div>

        <div class="col-4 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label for="categoryId">دسته بندی</label>
                        <select class="form-control" name="CategoryId" id="categoryId">
                            @{
                                IEnumerable<ProductCategory> categories = ViewBag.Categories;
                                foreach (var category in categories)
                                {
                                    <option @(Model.CategoryId == category.ProductCategoryId ? "selected" : "") value="@category.ProductCategoryId">@category.Title</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>تصویر شاخص</label>
                        <div>
                            <img id="img-preview-product" src="~/Content/Image/@(ViewBag.Image==null?"no-image.png":"Product/"+ViewBag.Image+"")" class="img-thumbnail" />
                        </div>
                        <input type="file" id="input-img-product" name="image" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" name="image" class="form-control file-upload-info" disabled="" placeholder="تصویر شاخص">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="button">بارگزاری</button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" @(Model.HaveSlider == true ? "checked" : "") value="true" name="HaveSlider" class="form-check-input">
                                نمایش در اسلایدر
                                <i class="input-helper"></i>
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>تصویر اسلایدر</label>
                        <div>
                            <img id="img-preview-slider" src="~/Content/Image/@(ViewBag.Slider==null?"no-image.png":"Product/"+ViewBag.Slider+"")" class="img-thumbnail" />
                        </div>
                        <div class="input-group col-xs-12">
                            <input type="file" id="input-img-slider" name="slider" class="file-upload-default">
                            <input type="text" class="form-control file-upload-info" disabled="" placeholder="تصویر اسلایدر">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="button">بارگزاری</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="/Content/AdminPanel/js/file-upload.js"></script>
<script src="~/Content/AdminPanel/js/panel-script.js"></script>