@model IEnumerable<VOneDomain.Models.Product>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">لیست محصولات</h4>
                <hr />
                <button onclick="showAddProduct()" class="btn btn-primary mr-2">افزودن محصول</button>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    تصویر شاخص
                                </th>
                                <th>
                                    عنوان محصول
                                </th>
                                <th>
                                    قیمت
                                </th>
                                <th>
                                    دسته بندی
                                </th>
                                <th>
                                    عملیات
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="/Content/Image/Product/Thumbnail/@item.ImageUrl" alt="image">
                                    </td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @item.Price تومان
                                    </td>
                                    <td>
                                        @item.ProductCategory.Title
                                    </td>
                                    <td>
                                        <button onclick="showEditProduct(@item.ProductId)" type="button" class="btn btn-primary btn-rounded btn-icon">
                                            <i class="mdi mdi-pencil-circle-outline"></i>
                                        </button>
                                        <button onclick="deleteProduct(@item.ProductId)" type="button" class="btn btn-danger btn-rounded btn-icon">
                                            <i class="mdi mdi-delete-outline"></i>
                                        </button>
                                        <a href="/Admin/Product/Gallery/@item.ProductId" type="button" class="btn btn-behance btn-rounded btn-icon">
                                            <i class="mdi mdi-animation-outline"></i>
                                        </a>
                                        <button onclick="" type="button" class="btn btn-warning btn-rounded btn-icon">
                                            <i class="mdi mdi-eye-outline"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
