@model IEnumerable<VOneDomain.Models.ProductGallery>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">لیست گالری محصولات</h4>
                <hr />
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                        <tr>

                            <th>
                                تصویر
                            </th>
                            <th>
                                عنوان
                            </th>
                            <th>
                                عملیات
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img class="img-thumbnail" style="width: 100px; height: 100px; border-radius: 10px;" src="/Content/Image/Gallery/Thumbnail/@item.ImageUrl"/>
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    <button onclick="showEditGallery(@item.ProductGalleryId)" type="button" class="btn btn-success btn-rounded btn-icon">
                                        <i class="mdi mdi-pencil-circle-outline"></i>
                                    </button>
                                    <button onclick="DeleteGallery(@item.ProductGalleryId)" type="button" class="btn btn-danger btn-rounded btn-icon">
                                        <i class="mdi mdi-delete-outline"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Content/AdminPanel/js/panel-script.js"></script>



