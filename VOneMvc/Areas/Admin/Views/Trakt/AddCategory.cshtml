@using VOneDomain.Models
@model TraktCategory

@using (Ajax.BeginForm("AddCategory",
    "Trakt",
    FormMethod.Post,
    new AjaxOptions()
    {
        OnSuccess = "loadListTCategory",
        UpdateTargetId = "div-list-tcategory"
    }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">افزودن دسته جدید</h4>
                    <p class="card-description mb-5">
                        اطلاعات را وارد کرده و دکمه تایید را یزنید
                    </p>
                    <hr />
                    <div class="form-group">
                        @if (ViewBag.Error == true)
                        {
                            @Html.ValidationSummary(false, "", new { @class = "text-danger pt-2 border rounded border-danger" })
                        }
                    </div>
                    <div class="form-group">
                        <label for="parentId">سر دسته</label>
                        <select class="form-control" name="ParentId" id="parentId">
                            @{
                                IEnumerable<TraktCategory> categories = ViewBag.Categories;
                                <option value="0">دسته اصلی</option>
                                foreach (var category in categories)
                                {
                                    <option value="@category.TraktCategoryId">@category.Title</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="title">عنوان دسته</label>
                        <input type="text" class="form-control" id="title" name="Title" placeholder="عنوان محصول">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">تایید</button>
                    <button type="button" onclick="showAddTCategory()" class="btn btn-light">بازگشت</button>
                </div>
            </div>
        </div>
    </div>
}

<script src="/Content/AdminPanel/js/file-upload.js"></script>
<script src="~/Content/AdminPanel/js/panel-script.js"></script>


